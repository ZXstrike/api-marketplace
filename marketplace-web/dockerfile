# Build stage
FROM golang:1.24-alpine AS builder

WORKDIR /app

# Copy and download dependencies separately (better caching)
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application, pointing to the ./cmd directory
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o marketplace-app ./cmd

# Final stage - minimal image
FROM alpine:latest

WORKDIR /app

# Create non-root user
RUN adduser -D appuser
USER appuser

# Copy only the binary from builder
COPY --from=builder /app/marketplace-app .

EXPOSE 80

CMD ["./marketplace-app"]